<%-include("../partials/header")%>

<header class="jumbotron">
<div class ="container">
<h1>Welcome to Animega</h1>
<p>View Top anime</p>
<p>
<a class = "btn btn-primary btn-large" href="/animes/new">Add New Anime</a>
</p>
</div>
</header>

<div class="row text-center" style="display:flex; flex-wrap: wrap;">
	<div class="col-md-12">
             <% if(noMatch !== null) { %>
             <h3><%= noMatch %></h3>
             <p>
            	<form action="/animes" method="GET" class="form-inline">
            		<div class="form-group">
            			<input type="text" name="search" placeholder="Anime search..." class="form-control">
            			<input type="submit" value="Search" class="btn btn-default">
            		</div>
            	</form>
            </p>
             <% } %>
         </div>
	<% animes.forEach(function(animes){ %>
	<div class="col-md-3 col-sm-6">
		<div class="thumbnail">
			<img src="<%= animes.image %>">
			<div class="caption">
				<h4><%= animes.name %></h4>
			</div>
			<p>
				<a href="/animes/<%=animes._id%>" class="btn btn-primary">More Info</a>
			</p>
		</div>
	</div>
	<% }); %>
</div>



<%-include("../partials/footer")%>