<%-include("../partials/header")%>
<div class="container">
	<div class="row">
		
	</div>
	<h1 style="text-align: center;">Edit <%= animes.name%></h1>
	<div style="width:30%; margin:30px auto;">
		<form action="/animes/<%=animes._id%>?_method=PUT" method="POST">   
		<div class="form-group">
			<input class="form-control" type="text" name="anime[name]"value="<%= animes.name%>">
		</div>  
		<div class="form-group">
			<input class="form-control" type="text" name="anime[image]" value="<%= animes.image%>">
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="anime[description]" value="<%= animes.description%>">
		</div> 
		<div class="form-group">
			<button class="btn btn-large btn-primary btn-block">Submit!</button>
		</div>
		
	</form>
	<a href="/animes">Go Back</a>
	</div>
	
</div>
</div>
<%-include("../partials/footer")%>