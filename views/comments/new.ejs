<%-include("../partials/header")%>

<div class="row justify-content-center">
	<div class="col-md-12 text-center">
		<h1>Add New Comment to <%= anime.name %></h1>	
	</div>
	
	<div class="col-xs-12 col-md-6 col-lg-4">
		<form action="/animes/<%=anime._id %>/comments" method="POST">   
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="text">
			</div>   
			<div class="form-group">
				<button class="btn btn-large btn-primary btn-block">Submit!</button>
			</div>
			
		</form>
		<a href="/animes">Go Back</a>
	</div>
</div>

<%-include("../partials/footer")%>